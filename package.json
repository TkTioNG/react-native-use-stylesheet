{
  "name": "react-native-use-stylesheet",
  "version": "0.0.2",
  "description": "Responsive StyleSheet for React Native, Just Testing",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-use-stylesheet-example",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit --project ./tsconfig.spec.json",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "build": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "responsive",
    "UI",
    "StyleSheet",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TkTioNG/react-native-use-stylesheet.git"
  },
  "bugs": {
    "url": "https://github.com/TkTioNG/react-native-use-stylesheet/issues"
  },
  "homepage": "https://github.com/TkTioNG/react-native-use-stylesheet",
  "author": "TkTioNG (https://github.com/TkTioNG)",
  "license": "MIT",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.1.0",
    "@evilmartians/lefthook": "^1.6.7",
    "@react-native/eslint-config": "0.75.0-main",
    "@release-it/conventional-changelog": "^8.0.1",
    "@testing-library/react-native": "^12.4.4",
    "@tsconfig/react-native": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.67",
    "@types/react-test-renderer": "^18.0.7",
    "commitlint": "^19.2.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-native": "^0.73.6",
    "react-native-builder-bob": "^0.23.2",
    "react-test-renderer": "^18.2.0",
    "release-it": "^17.1.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "example"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "react/react-in-jsx-scope": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
